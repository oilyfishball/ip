<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="300.0" minWidth="350.0"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: black;"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="MainWindow">
    <children>
        <TextField fx:id="userInput"
                   onAction="#handleUserInput"
                   prefHeight="41.0"
                   style="-fx-text-fill: white; -fx-background-color: #2d2d2d; -fx-border-color: #555555; -fx-border-radius: 5px; -fx-background-radius: 5px;"
                   AnchorPane.bottomAnchor="1.0"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="76.0" />
        <Button fx:id="sendButton"
                mnemonicParsing="false"
                onAction="#handleUserInput"
                prefHeight="41.0"
                prefWidth="76.0"
                style="-fx-text-fill: white; -fx-background-color: #4a4a4a; -fx-border-color: #666666; -fx-border-radius: 5px; -fx-background-radius: 5px;"
                text="Send"
                AnchorPane.bottomAnchor="1.0"
                AnchorPane.rightAnchor="0.0" />
        <ScrollPane fx:id="scrollPane"
                    hbarPolicy="NEVER"
                    hvalue="1.0"
                    style="-fx-background-color: transparent; -fx-background: transparent;"
                    vvalue="1.0"
                    fitToWidth="true"
                    AnchorPane.topAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="42.0">
            <content>
                <VBox fx:id="dialogContainer"
                      style="-fx-background-color: transparent; -fx-padding: 10px;" />
            </content>
        </ScrollPane>
    </children>
</AnchorPane>